<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Anjanath" />

    <ImageView
        android:id="@+id/imageHead"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageChest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textName"
        tools:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageChest"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toStartOf="@id/imageGloves"
        app:layout_constraintStart_toEndOf="@id/imageHead"
        app:layout_constraintTop_toTopOf="@id/imageHead"
        tools:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageGloves"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toStartOf="@id/imageWaist"
        app:layout_constraintStart_toEndOf="@id/imageChest"
        app:layout_constraintTop_toTopOf="@id/imageHead"
        tools:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageWaist"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toStartOf="@id/imageLegs"
        app:layout_constraintStart_toEndOf="@id/imageGloves"
        app:layout_constraintTop_toTopOf="@id/imageHead"
        tools:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageLegs"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageWaist"
        app:layout_constraintTop_toTopOf="@id/imageHead"
        tools:src="@mipmap/ic_launcher" />

</androidx.constraintlayout.widget.ConstraintLayout>